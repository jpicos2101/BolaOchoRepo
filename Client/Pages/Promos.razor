@page "/promos"

@code {
    [Parameter]
    [SupplyParameterFromQuery]
    public bool showBack { get; set; } = false;

    public List<string[]> tableData = new List<string[]>
    {
        new[] { "Alitas y Juegos","1.- Alitas y juegos.png" },
        new[] { "Bebida y Botana","2.- Bebida y botana.png" },
        new[] { "Botanas y Billar","3.- Botanas y billar.png" },
        new[] { "Fiesta Completa","4.- Fiesta completa.png" },
        new[] { "La Bola 8","5.- La bola 8.png" },
        new[] { "Michelada y Botanas","6.- Michelada y botanas.png" }
    };
}

<div class="table-container" style="width:90%; margin: auto;">
    @for (int i = 0; i < tableData.Count; i++)
    {
        <div class="table-row" id="row-@i" onclick="toggleRow('row-content-@i')" style="cursor: pointer;">
            <img src="icons/8_ball.png" alt="icon" />
            <div class="table-cell">@tableData[i][0]</div>
            <img src="icons/8_ball.png" alt="icon" />
        </div>

        <div class="row-content" id="row-content-@i" style="display: none;">
            <div class="imgbox">
                <img class="center-fit" src="promos/@tableData[i][1]" />
            </div>
        </div>
    }

    @if (showBack)
    {
        <a href="/bikers">Promo Senderos</a>
    } 
</div>

<script>

    function toggleRow(contentId) {

        $('#' + contentId).toggle('slow');
    };
</script>

<style>
    .imgbox {
        display: grid;
        height: 100%;
    }

    .center-fit {
        max-width: 100%;
        max-height: 100vh;
        margin: auto;
    }

    html {
        overflow-y: scroll;
    }

    .table-container {
        display: flex;
        flex-direction: column;
    }

    .table-row {
        display: flex;
        justify-content: space-between;
        background-color: #f2f2f2;
        padding: 10px;
        margin-bottom: 5px;
    }

    .row-content {
        background-color: #e9e9e9;
        padding: 10px;
        margin-bottom: 5px;
    }

    .toggle-btn {
        margin-left: 10px;
        padding: 0;
        border: none;
        background: transparent;
        cursor: pointer;
        transition: height 4s;
    }
</style>
