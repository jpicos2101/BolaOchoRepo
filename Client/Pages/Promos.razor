@page "/promos"

@code {

}
<style type="text/css">

    @@media (min-width: 800px) {
        .resizeImg {
            height: 50%;
            width: 50%;
        }
    }

    .carousel.pointer-event {
        touch-action: pan-y pinch-zoom;
    }

</style>

<div style="margin:auto;" class="resizeImg">
    <div id="carouselMenu" class="carousel slide" data-ride="carousel">
        <div class="carousel-indicators" style="padding-bottom: 15px;">
            <button type="button" data-bs-target="#carouselMenu" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Pagina 1"></button>
            <button type="button" data-bs-target="#carouselMenu" data-bs-slide-to="1" aria-label="Pagina 2"></button>
            <button type="button" data-bs-target="#carouselMenu" data-bs-slide-to="2" aria-label="Pagina 3"></button>
            <button type="button" data-bs-target="#carouselMenu" data-bs-slide-to="3" aria-label="Pagina 4"></button>
            <button type="button" data-bs-target="#carouselMenu" data-bs-slide-to="4" aria-label="Pagina 5"></button>
            <button type="button" data-bs-target="#carouselMenu" data-bs-slide-to="5" aria-label="Pagina 6"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="promos/1.- Alitas y juegos.png" class="d-block w-100" alt="1">
            </div>
            <div class="carousel-item">
                <img src="promos/2.- Bebida y botana.png" class="d-block w-100" alt="2">
            </div>
            <div class="carousel-item">
                <img src="promos/3.- Botanas y billar.png" class="d-block w-100" alt="3">
            </div>
            <div class="carousel-item">
                <img src="promos/4.- Fiesta completa.png" class="d-block w-100" alt="4">
            </div>
            <div class="carousel-item">
                <img src="promos/5.- La bola 8.png" class="d-block w-100" alt="5">
            </div>
            <div class="carousel-item">
                <img src="promos/6.- Michelada y botanas.png" class="d-block w-100" alt="6">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselMenu" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselMenu" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
        <div style="background-color: #6D5E5B; text-align: center; margin-top: -3px;">
            <a style="color: #ED7C2F; font-weight: bold; padding-top:10px;" href="/menu">Ver Nuestro Menu</a>
        </div>
    </div>
</div>
<br />
<br />
<br />

<script type="text/javascript">

    $(document).ready(function () {

        var myCarousel = document.querySelector('#carouselMenu');
        var carousel = new bootstrap.Carousel(myCarousel);
    });
</script>